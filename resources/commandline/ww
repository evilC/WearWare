#!/bin/sh
# Toggle WearWare systemd autostart and running state
# Save as /usr/local/bin/ww

SERVICE=wearware.service

if [ "$#" -eq 0 ]; then
	if systemctl is-enabled --quiet $SERVICE; then
		action="stop"
	else
		action="start"
	fi
else
	action=$1
fi

if [ "$action" = "start" ]; then
	sudo systemctl enable --now $SERVICE
	echo "WearWare autostart enabled and started."
else
	sudo systemctl disable --now $SERVICE
	echo "WearWare autostart disabled and stopped."
fi
