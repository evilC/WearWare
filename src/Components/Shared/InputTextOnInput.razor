@* Handles validation as you type for an InputText *@
@inherits InputText

@* Bind the oninput event *@
<input @attributes="AdditionalAttributes"
       class="@CssClass"
       value="@(CurrentValueAsString ?? string.Empty)"
       @oninput="EventCallback.Factory.CreateBinder<string>(this, __value => CurrentValueAsString = __value ?? string.Empty, CurrentValueAsString ?? string.Empty)" />