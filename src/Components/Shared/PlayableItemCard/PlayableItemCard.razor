@using WearWare.Common.Media

<div class="playlist-item-image-and-info">
    @if (!string.IsNullOrEmpty(ImageSrc))
    {
        <img class="playlist-item-image" src="@ImageSrc" alt="@Item?.Name" @onclick="HandleImageClick" style="cursor:@(ImageClicked.HasDelegate ? "pointer" : "default")" />
    }
    <div class="playlist-item-info">
        <strong class="playlist-item-title">@Item?.Name</strong>
        @if (Item is not null)
        {
            <div class="playlist-item-mode">@($"{Item.PlayMode.ToString()} {Item.PlayModeValue}" +
                $"{(Item.PlayMode == PlayMode.Loop ? "x" : "")}{(Item.PlayMode == PlayMode.Duration ? "s" : "")}")</div>
            <div class = "playlist-item-brightness">Brightness: @Item.CurrentBrightness%</div>
        }
    </div>
</div>
