@using Microsoft.AspNetCore.Components
@*
Loading overlay to show when a page is still loading data.
Pages which implement DataPageBase should show this when Ready is false, and their data is not yet loaded.
*@
<div style="position:fixed; inset:0; display:flex; align-items:center; justify-content:center; background-color:rgb(211,211,211); z-index:9000;">
    <div class="text-center">
        <div class="mb-3 h4">Loading...</div>
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-dark" role="status" style="width:3rem; height:3rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
</div>
